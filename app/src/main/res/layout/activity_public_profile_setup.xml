<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".activity.PublicProfileSetupActivity">

    <EditText
        android:id="@+id/et_custom_slug"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Đường dẫn tùy chỉnh (ví dụ: my-cert-profile)"
        android:inputType="textVisiblePassword"
        android:maxLines="1"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chọn chứng chỉ muốn hiển thị:"
        android:textSize="16sp"
        android:textStyle="italic"
        android:layout_marginBottom="8dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_cert_selection"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"
        android:layout_marginBottom="16dp"
        tools:listitem="@layout/item_certificate_selection"/>

    <TextView
        android:id="@+id/tv_empty_state"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Bạn chưa có chứng chỉ nào để hiển thị công khai."
        android:textSize="18sp"
        android:textColor="@android:color/darker_gray"
        android:visibility="gone"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btn_generate_public_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tạo &amp; Chia sẻ Liên kết Công khai"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/btn_view_public_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xem Hồ sơ Công khai Trong Ứng dụng"
        android:backgroundTint="@android:color/holo_green_dark"
        android:textColor="@android:color/white"
        android:layout_marginTop="8dp"
        android:visibility="gone"/>

</LinearLayout>